@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


@if (Model.DeviceType == Helpers.DeviceType.Desktop || Model.DeviceType == Helpers.DeviceType.Unknown)
{
    @await Html.PartialAsync("~/Pages/Desktop/Index.cshtml", new Desktop.IndexModel(), new ViewDataDictionary(ViewData))
}
else
{
    @await Html.PartialAsync("~/Pages/Mobile/Index.cshtml", new Mobile.IndexModel(), new ViewDataDictionary(ViewData))
}